@model PracticEPAM.Models.Category

@{
    ViewData["Title"] = "Создание новой категории";
}

<h4>Создать категорию</h4>
<hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <input asp-for="Category1" class="form-control" />
                <span asp-validation-for="Category1" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
                <div class="col-6">
                    <a class="btn btn-secondary float-end" asp-action="Index">Вернуться назад</a>
                </div>
            </div>
        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
