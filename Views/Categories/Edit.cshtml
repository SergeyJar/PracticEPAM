@model PracticEPAM.Models.Category

@{
    ViewData["Title"] = "Изменить название категории";
}

<h4>Изменить название категории</h4>
<hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCategories" />
            <div class="form-group">
                <input asp-for="Category1" class="form-control mb-2" />
                <span asp-validation-for="Category1" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
                <div class="col-6">
                    <a class="btn btn-secondary float-end" asp-action="Index">Вернуться назад</a>
                </div>
            </div>
        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
