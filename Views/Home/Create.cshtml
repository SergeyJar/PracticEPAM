@model PracticEPAM.Models.Review
@using Microsoft.AspNetCore.Identity
@using Org.BouncyCastle.Tls
@inject UserManager<IdentityUser> UserManager
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Создать отзыв";
}

<h4>Создать отзыв</h4>
<hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="IdUser" hidden value="@UserManager.GetUserId(User) " class="form-control" />
                <span asp-validation-for="IdUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProduct" hidden class="control-label">Название обозреваемого продукта</label>
                <select asp-for="IdProduct" hidden class="form-control" asp-items="ViewBag.IdProduct"></select>
                <span asp-validation-for="IdProduct" class="text-danger"></span>
            </div>
@*             <div class="form-group">
                <label asp-for="ReviewHtml" class="control-label"></label>
                <input asp-for="ReviewHtml" class="form-control" />
                <span asp-validation-for="ReviewHtml" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название отзыва</label>
                <input asp-for="Name" type="text" required class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Краткое описание</label>
                <input asp-for="Description" type="text" required class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                    <textarea asp-for="ReviewHtml"></textarea>
                    <span asp-validation-for="ReviewHtml" class="text-danger"></span>
            </div>
            <div class="row mt-2">
                <div class="col-6">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
                <div class="col-6">
                    <a class="btn btn-secondary float-end"  href='javascript: history.length > 1 ? history.go(-1): null' с>Вернуться назад</a>
                </div>
             </div>
        </form>


<script src="https://cdn.tiny.cloud/1/efvuwqhzpbq45qrktmnmex1io61pea1e0fd9fws7d9ut7j74/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
